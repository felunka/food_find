.card.mt-3
  %h5.card-header.d-flex.justify-content-between.align-items-center
    Tags
    = button_to 'Add', new_tag_path, class: 'btn btn-primary', method: :get

  .card-body
    .row.row-cols-1.row-cols-sm-2.row-cols-md-3.row-cols-lg-5
      - @tags.each do |tag|
        = render partial: 'tag_card', locals: {tag: tag}
